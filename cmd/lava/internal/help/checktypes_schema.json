	{
	    "$schema": "https://json-schema.org/draft/2020-12/schema",
	    "type": "object",
	    "properties": {
	        "checktypes": {
	            "type": "array",
	            "items": {
	                "type": "object",
	                "properties": {
	                    "name": {
	                        "type": "string"
	                    },
	                    "description": {
	                        "type": "string"
	                    },
	                    "image": {
	                        "type": "string"
	                    },
	                    "timeout": {
	                        "type": "integer"
	                    },
	                    "required_vars": {
	                        "type": ["array", "null"],
	                        "items": {
	                            "type": "string"
	                        }
	                    },
	                    "assets": {
	                        "type": "array",
	                        "items": {
	                            "type": "string"
	                        }
	                    },
	                    "options": {
	                        "type": ["object", "null"],
	                        "properties": {
	                            "depth": {
	                                "type": "integer"
	                            },
	                            "branch": {
	                                "type": "string"
	                            },
	                            "additionalProperties": true
	                        },
	                        "additionalProperties": false
	                    }
	                },
	                "required": ["name", "description", "image", "timeout", "assets"],
	                "additionalProperties": false
	            }
	        }
	    },
	    "required": ["checktypes"],
	    "additionalProperties": false
	}
